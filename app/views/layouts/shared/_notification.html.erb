<div class="z-40 fixed max-w-screen-xl px-4 w-full top-18 left-1/2 -translate-x-1/2 transform duration-1000 hidden space-y-1"
data-controller="notification"
  data-notification-delay-value="3000"
  data-transition-enter-from="opacity-0 -translate-y-4"
  data-transition-enter-to="opacity-100 translate-y-0"
  data-transition-leave-from="opacity-100 translate-y-0"
  data-transition-leave-to="opacity-0 -translate-y-4"
  >

  <% flash.each do |key, value| %>

    <% if value.is_a?(Array) %>

      <% value.each do |v| %>
        <div class="rounded-lg flex items-center px-4 py-2 text-sm  bg-white shadow dark:border-0 dark:bg-gray-800 space-x-2" role="alert">
          <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg <%= style_icon_for(key) %>">
            <%= icon('fa-solid', icon_for(key)) %>
          </div>
          <div class="font-medium <%= style_text_for(key) %>"> <%= v %></div>
        </div>
      <% end %>

    <% else %>
      <div class="rounded-lg flex items-center px-4 py-2 text-sm  bg-white shadow dark:border-0 dark:bg-gray-800 space-x-2" role="alert">
        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 rounded-lg <%= style_icon_for(key) %>">
          <%= icon('fa-solid', icon_for(key)) %>
        </div>
        <div class="font-medium <%= style_text_for(key) %>"> <%= value %></div>
      </div>
    <% end %>
  <% end %>

</div>
