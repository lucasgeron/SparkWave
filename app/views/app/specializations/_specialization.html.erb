<div id="<%= dom_id specialization %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Area:</strong>
    <%= specialization.area_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= specialization.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this specialization", specialization, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this specialization', edit_app_specialization_path(specialization), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
