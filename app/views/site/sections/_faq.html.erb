<section id="faq" data-navigation-target="faq_sec" class="">
  <div class="inner-section-default">

    <%# faq.title %>
    <div class="max-w-screen-lg space-y-4 text-center mx-auto">
      <h2  data-aos="zoom-in" class="title text-center "><%= t('views.site.faq.title') %></h2>
      <p data-aos="zoom-in" data-aos-delay="50"  class="max-w-screen-md mx-auto"><%=t('views.site.faq.description')%></p>
    </div>

    <%# MAIN QUESTIONS %>

    <%# set the midpoint of main_question list %>
    <% mp = (t('views.site.faq.main_questions').length / 2.0).ceil %>

    <div class="grid my-10 md:gap-4 md:flex space-y-10 sm:space-y-0 ">
      <%# LEFT SIDE %>
      <div class="flex-1 space-y-10 md:text-left">
       
        <% t('views.site.faq.main_questions')[0...mp].each do |item| %>
          <div data-aos="fade-up" data-aos-delay="50" class="space-y-4">

            <h3 class="flex md:justify-start items-center font-medium text-base md:text-lg ">
              <%= icon('fa-solid','circle-question', class:" flex-shrink-0 mx-2 w-5 h-5 text-gray-500 dark:text-gray-400") %>
              <span class=""> <%= item[:question] %> </span>
            </h3>

            <p class="description hover:text-gray-900 dark:hover:text-white transition duration-300"><%= item[:answer] %></p>

          </div>
        <% end %>
      </div>

      <div data-aos="fade-up" data-aos-delay="50" class="w-1 h-auto hidden md:inline md:flex-shrink bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700 mx-auto"> </div>

      <%# RIGHT SIDE %>
      <div class="flex-1 space-y-10 text-left">
        <% t('views.site.faq.main_questions')[mp..-1].each do |item| %>
          <div data-aos="fade-up" data-aos-delay="50" class="space-y-4">
            <h3 class="flex md:justify-start items-center font-medium text-base md:text-lg">
              <%= icon('fa-solid','circle-question', class:"flex-shrink-0 mx-2 w-5 h-5 text-gray-500 dark:text-gray-400") %>
              <span class=""> <%= item[:question] %> </span>
            </h3>
            <p class="description hover:text-gray-900 dark:hover:text-white transition duration-300"><%= item[:answer] %></p>
          </div>
        <% end %>
      </div>
    </div>

    <%# ---------------- %>

    <%# faq.subtitle %>
    <div class="max-w-screen-lg space-y-4 text-center mx-auto">
      <h2 data-aos="zoom-in" data-aos-delay="50" class="title text-xl md:text-2xl text-center "><%= t('views.site.faq.sub_title') %></h2>
    </div>

    <%# EXTRA QUESTIONS %>

    <%# set the midpoint of extra_question list %>
    <% mp = (t('views.site.faq.extra_questions').length / 2.0).ceil %>

    <div data-aos="fade-up" data-aos-delay="50"  class="grid my-10 lg:gap-4 lg:flex">
      <div class="flex-1 text-left group">
        <div id="accordion-flush-left" data-accordion="collapse" data-active-classes="md:flex-1" data-inactive-classes="text-gray-500 dark:text-gray-400">
          <% t('views.site.faq.extra_questions')[0...mp].each_with_index do |item, index| %>
            <h2 id="accordion-flush-left-heading-<%=index%>">
              <button type="button" class="hover:text-gray-900 dark:hover:text-white transition duration-300  flex items-center justify-between w-full py-5 font-medium text-left text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400" data-accordion-target="#accordion-flush-left-body-<%=index%>" aria-expanded="false" aria-controls="accordion-flush-left-body-<%=index%>">
                <span class="text-base md:text-lg"> <span class="hidden md:inline"><%= icon('fa-solid','circle-question', class:"order-1 md:order-2 flex-shrink-0 mx-2 w-5 h-5 text-gray-500 dark:text-gray-400") %></span> <%= item[:question] %></span>
                <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                </svg>
              </button>
            </h2>
            <div id="accordion-flush-left-body-<%=index%>" class="hidden" aria-labelledby="accordion-flush-left-heading-<%=index%>">
              <div class="py-5 border-b border-gray-200 dark:border-gray-700">
                <p class=" description group-hover:text-gray-900 dark:group-hover:text-white transition duration-300"><%= item[:answer]%></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="w-1 h-auto hidden lg:inline bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700 mx-auto"> </div>

      <div class="flex-1 text-left  group">
        <div id="accordion-flush-right" data-accordion="collapse" data-active-classes="md:flex-1" data-inactive-classes="text-gray-500 dark:text-gray-400">
          <% t('views.site.faq.extra_questions')[mp..-1].each_with_index do |item, index| %>
            <h2 id="accordion-flush-right-heading-<%=index+mp+mp%>">
              <button type="button" class="hover:text-gray-900 dark:hover:text-white transition duration-300 flex items-center justify-between w-full py-5 font-medium text-left text-gray-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400" data-accordion-target="#accordion-flush-right-body-<%=index+mp%>" aria-expanded="false" aria-controls="accordion-flush-right-body-<%=index+mp%>">
                <span class="text-base md:text-lg"> <span class="hidden md:inline"><%= icon('fa-solid','circle-question', class:"order-1 md:order-2 flex-shrink-0 mx-2 w-5 h-5 text-gray-500 dark:text-gray-400") %></span> <%= item[:question] %></span>
                <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                </svg>
              </button>
            </h2>
            <div id="accordion-flush-right-body-<%=index+mp%>" class="hidden" aria-labelledby="accordion-flush-right-heading-<%=index+mp%>">
              <div class="py-5 border-b border-gray-200 dark:border-gray-700">
                <p class=" description group-hover:text-gray-900 dark:group-hover:text-white transition duration-300"><%= item[:answer]%></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>
</section>
