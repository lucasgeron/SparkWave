<section id="about" data-navigation-target="about_sec" class="h-screen grid place-items-center  ">
  <div class="inner-section-default    md:grid lg:grid-cols-2  items-center   default-gap">


    <div class="grid space-y-4 ">
      <%# about.title %>
      <div data-aos="zoom-in" class="flex justify-start items-center">
        <%= image_tag('favicon.ico', class: 'h-8  -mr-3', alt: 'Logo') %>
        <%= image_tag('favtext-white.svg', class: ' h-10  hidden dark:inline', alt: 'Logotext') %>
        <%= image_tag('favtext-dark.svg', class: ' h-10  inline dark:hidden', alt: 'Logotext') %>   
      </div>
      <%# about.description %>
      <p data-aos="zoom-in" data-aos-delay="50" class="description "><%= t('views.site.about.description')%></p>
      <%# about.note %>
      <p data-aos="zoom-in" data-aos-delay="50" class="description hidden lg:inline"><%= t('views.site.about.note')%></p>
    </div>
  
    <div class="grid grid-cols-2 gap-4 my-8 md:mt-0">
      <%= image_tag('banner_01', class:'about_aos_trigger w-full rounded-lg', data: {aos:'zoom-in', aos_delay:50, aos_duration:700})%>
      <%= image_tag('banner_02', class:'mt-4 w-full lg:mt-10 rounded-lg', data: {aos:'zoom-in', aos_delay:50, aos_duration:700})%>
      </div>
  
    <p data-aos="zoom-in" data-aos-delay="50" data-aos-anchor=".about_aos_trigger" class="description lg:hidden"><%= t('views.site.about.note')%></p>

  </div>

  <a data-aos="zoom-in" data-aos-delay="50" data-aos-anchor=".about_aos_trigger" data-aos-mirror="false"  href="#faq"  data-controller="scroll-to" data-scroll-to-offset-value="110"  class="hidden lg:inline-flex items-center space-x-2">
      <span class=""><%= icon('fa-solid', 'arrow-down', class:"fa-bounce ", style:"--fa-bounce-height: 3px") %></span>
      <span class=""><%= t('views.site.about.cta') %></span>
  </a>
</section>



