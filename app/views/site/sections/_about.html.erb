<section id="about" data-navigation-target="about_sec" class="h-screen grid place-items-center  ">
  <div class="inner-section-default    md:grid lg:grid-cols-2  items-center   default-gap">


    <div class="grid space-y-4 ">
      <%# about.title %>
      <h2 data-aos="zoom-in" class="title"><%= t('views.site.about.title')%></h2>
      <%# about.description %>
      <p data-aos="zoom-in" data-aos-delay="50" class="description "><%= t('views.site.about.description')%></p>
      <%# about.note %>
      <p data-aos="zoom-in" data-aos-delay="50" class="description hidden lg:inline"><%= t('views.site.about.note')%></p>
    </div>
  
    <div class="grid grid-cols-2 gap-4 my-8 md:mt-0">
      <img data-aos="zoom-in" data-aos-delay="50" data-aos-duration='700' class="about_aos_trigger w-full rounded-lg" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/content/office-long-2.png" alt="office content 1">
      <img data-aos="zoom-in" data-aos-delay="50" data-aos-duration='700' class="mt-4 w-full lg:mt-10 rounded-lg" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/content/office-long-1.png" alt="office content 2">
    </div>
  
    <p data-aos="zoom-in" data-aos-delay="50" data-aos-anchor=".about_aos_trigger" class="description lg:hidden"><%= t('views.site.about.note')%></p>

  </div>

  <a data-aos="zoom-in" data-aos-delay="50" data-aos-anchor=".about_aos_trigger" data-aos-mirror="false"  href="#services"  data-controller="scroll-to" data-scroll-to-offset-value="110"  class="hidden lg:inline-flex items-center space-x-2">
      <span class=""><%= icon('fa-solid', 'arrow-down', class:"fa-bounce ", style:"--fa-bounce-height: 3px") %></span>
      <span class=""><%= t('views.site.about.cta') %></span>
  </a>
</section>



