      </div>
      <p class="text-center"><%= t('views.site.footer.developed_by') %>
        <%= link_to t('views.app.github'), class:"font-semibold text-gray-900  md:hover:text-blue-700  dark:text-white md:dark:hover:text-blue-500 dark:hover:text-white " do %>
